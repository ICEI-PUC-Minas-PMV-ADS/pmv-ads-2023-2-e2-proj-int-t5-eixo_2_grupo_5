@model app_tech_talent.Models.Curriculo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCurriculo" />
            
            <div class="form-group">
                <label asp-for="ResumoProfissional" class="control-label"></label>
                <input asp-for="ResumoProfissional" class="form-control" />
                <span asp-validation-for="ResumoProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


